@model ExecViewHrk.Models.PositionBudgetSchedulesVM
@{

    Layout = null;
    ViewBag.Title = "PositionBudgetSchedulesDetails";
}


<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">
            <div class="main-header col-sm-12 p-0 m-b-15 b-b-muted">
                <div class="col-md-9 m-b-15 p-0">
                    <h4>Budget Schedule Details <span class="pull-right icon-edit-block m-l-30"><i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
                <div class="col-sm-3 p-r-0 text-right">

                    <button type="button" onclick='LoadMenu("PositionBudgetSchedulesList", "PositionBudgetSchedules")' class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal">
                        <i></i><span class="m-l-10">Back</span>
                    </button>

                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-sm-6 col-md-4">
                        <section class="panels-wells edit-block">
                            <div class="card m-b-15">
                                <div class="card-header">
                                    <h5 class="card-header-text"><i class="fa fa-usd f-16 m-r-5"></i> Budget Schedule Details</h5>
                                    <span class="pull-right icon-edit-block" id="PositionBudget_btn" data-target="#myDiv" onclick="openBudgetSchedulePopup(@Model.ID)"><i class="fa fa-pencil f-20 txt-primary"></i></span>
                                </div>
                                <div class="card-block p-t-0">
                                    <div class="row">
                                        <div class="col-sm-12 col-md-12 card-bg-primary-oth profile-block-tag">
                                            <h6 class="f-14 txt-white">Budget Schedule Details</h6>
                                        </div>
                                    </div>
                                    <div class="row p-t-10">
                                        <div class="col-sm-12 col-md-12 p-0">
                                            <div class="col-sm-12 col-md-12">
                                                <div class="form-group">
                                                    <label class="m-0">Schedule Type</label>
                                                    <span class="f-13 block f-w-600">@Model.ScheduleTypeText</span>
                                                </div>
                                                <div class="form-group">
                                                    <label class="m-0">Start Date</label>
                                                    <span class="f-13 block f-w-600">@Model.StartDate.Value.ToString("MM/dd/yyyy")</span>
                                                </div>
                                                <div class="form-group">
                                                    <label class="m-0">End Date</label>
                                                    <span class="f-13 block f-w-600">@Model.EndDate.Value.ToString("MM/dd/yyyy")</span>
                                                </div>
                                                <div class="form-group">
                                                    <label class="m-0">Effective Date</label>
                                                    <span class="f-13 block f-w-600">@Model.EffectiveDate.Value.ToString("MM/dd/yyyy")</span>
                                                </div>
                                                <div class="form-group">
                                                    <label class="m-0">Increase Type</label>
                                                    <span class="f-13 block f-w-600">@Model.IncreaseTypeText</span>
                                                </div>
                                                <div class="form-group">
                                                    <label class="m-0">Increase Amount</label>
                                                    @if (Model.IncreaseType == 1)
                                                    {
                                                    <span class="f-13 block f-w-600">$@Model.IncreaseAmount</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="f-13 block f-w-600">@Model.IncreaseAmount%</span>
                                                    }
                                                </div>                                               
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


