@using System.Web.Routing;
@using ExecViewHrk.WebUI.Models;

@{
    ViewBag.Title = "Postions";
    Layout = null;


}
<script type="text/javascript">
    function gridDeletePositionMaster(e) {
        e.preventDefault();
        var grid = this;
        var row = $(e.currentTarget).closest("tr");
        var data = grid.dataItem(row);
        var postData = { PositionId: data.PositionId };
        var formURL = $("#ApplicationUrl").val() + "Positions/PositionsList_Destroy";
        confirmDialog("", function () {
            $.post(formURL, postData, function (data, status) {
                if (data.succeed == false) {
                    toastr.error(data.Message);
                } else {
                    toastr.success('Record deleted successfully.');
                    resetGrid("gridPosition");
                }
            });
        });
    }

</script>
<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">
            <div class="main-header col-sm-12 p-0 m-b-0">
                <div class="col-md-9 m-b-15 p-0">
                    <h4>Position Setup List <span class="pull-right icon-edit-block m-l-30">@*<i class="fa fa-question-circle f-26 m-r-10"></i>*@ <i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-9 p-0">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="gridPositionAdd(event)">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>

                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-md-12">


                        <div class="theme-grid">

                            @(Html.Kendo().Grid<ExecViewHrk.WebUI.Models.PositionDetailsVm>()
                                    .Name("gridPosition")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()
                                    .Editable(editable => editable.Mode(GridEditMode.InLine))
                                    .Events(eventss => eventss.DetailExpand("gridPositionDetailExpand"))
                                        .Columns(columns =>
                                        {
                                            columns.Command(command =>
                                            {
                                                command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridPositionDetailEdit");
                                                //command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i></a>").Click("gridDelete");
                                                command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i></a>").Click("gridDeletePositionMaster");
                                            }).Width(100);
                                            columns.Bound(c => c.PositionCode).Title("Position Code");
                                            columns.Bound(c => c.Title).Title("Position Title");
                                            columns.Bound(c => c.Suffix).Title("Suffix");
                                            columns.Bound(c => c.BUCode).Title("BU Code");
                                            columns.Bound(c => c.BUTitle).Title("BU Title");
                                            columns.Bound(c => c.JobCode).Title("Job Code");
                                            columns.Bound(c => c.JobTitle).Title("Job Title");

                                        })
                                        .ClientDetailTemplateId("template")

                                    .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                        .DataSource(dataSource => dataSource
                                            .Ajax()


                                                    .Read(read => read.Action("PositionsList_Read", "Positions"))
                                                    .Create(create => create.Action("PositionsList_Create", "Positions"))
                                                    .Update(update => update.Action("PositionsList_Update", "Positions"))
                                                    .Destroy(destroy => destroy.Action("PositionsList_Destroy", "Positions"))
                                        .Model(model =>
                                        {
                                            model.Id(p => p.PositionId);
                                            model.Field(p => p.PositionId).Editable(false);
                                            model.Field(p => p.BusinessUnitId);
                                            model.Field(p => p.JobId);
                                            model.Field(p => p.DepartmentId);
                                            model.Field(p => p.LocationId);
                                            model.Field(p => p.UserDefinedSegment1Id);
                                            model.Field(p => p.UserDefinedSegment2Id);
                                            model.Field(p => p.PositionCode);
                                            model.Field(p => p.PositionDescription);
                                            model.Field(p => p.ReportsToPositionId);
                                            //model.Field(p => p.RateMultiplier);
                                        }
                                              )
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                         )

                            )


                        </div>
                    </div>

                </div>
            </div>

        </div>
    </div>

    <div class="modal fade" id="AddPositionModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" data-toggle="modal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
        @*PositionBudgetEditModalPartial*@
        @*@Html.Partial("PositionAddModalPartial", @Model)*@
    </div>
</div>


<script id="template" type="text/kendo-tmpl">
    <div class="k-detail-column">
        <ul>
            <li><label>Total Slots:</label>#= TotalSlots #</li>
            <li><label>FTE:</label>#= FTE #</li>
        </ul>
    </div>

</script>

