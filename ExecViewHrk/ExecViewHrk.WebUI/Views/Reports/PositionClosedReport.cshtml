                    <h4>Position Closed Report <span class="pull-right icon-edit-block m-l-30"><i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
            </div>

            @*<div class="col-lg-12 col-md-12 p-0">
