@model ExecViewHrk.Models.BudgetToActualsReportVm
@{
    ViewBag.Title = "Budget To Actuals Report";
    Layout = null;
}
<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            <div class="main-header col-sm-12 p-0 m-b-0">
                <div class="col-md-9 m-b-15 p-0">
                    <h4>Budget To Actuals<span class="pull-right icon-edit-block m-l-30"><i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-9 p-0">
                        <div class="row">
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>
                                        Year
                                    </label>
                                    @Html.DropDownListFor(m => m.budgetYear, new SelectList(Model.lstBudgetYears, "keyvalue", "keydescription", Model.budgetYear), new { @class = "form-control input-sm" })
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <div class="form-group">
                                    <label>
                                        Months To Sum:
                                    </label>
                                    @Html.DropDownListFor(m => m.budgetMonth, new SelectList(Model.lstBudgetMonths, "Keyvalue", "keydescription", Model.budgetMonth), new { @class = "form-control input-sm" })
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">

                            @(Html.Kendo().Grid<ExecViewHrk.Models.BudgetToActualsReportVm>()
        .Name("gridBudgetToActualsReportVM")
        .Resizable(resize => resize.Columns(true))
        .Filterable()
        .Editable(editable => editable.Mode(GridEditMode.InLine))
        .Columns(columns =>
        {
            columns.Bound(c => c.Code).Title("Position Code");
            columns.Bound(c => c.PositionTitle).Title("Position Title");
            columns.Bound(c => c.PositionStatus).Title("Position Status");
            columns.Bound(c => c.BudgetAmount).Title("Budget").ClientTemplate("$#= BudgetAmount # ").ClientFooterTemplate("$#= sum # ");
            columns.Bound(c => c.BudgetToDate).Title("Budget To Date").ClientTemplate("$#= BudgetToDate # ").ClientFooterTemplate("$#= sum # ");
            columns.Bound(c => c.ActualPay).Title("YTDActuals").ClientTemplate("$#= ActualPay # ").ClientFooterTemplate("$#= sum # ");
            columns.Bound(c => c.Variance).Title("YTDVariance").ClientTemplate("$#= Variance # ").ClientFooterTemplate("$#= sum # ");
            columns.Bound(c => c.BusinessUnitCode).Title("Business Unit Code");
            columns.Bound(c => c.BusinessUnitTitle).Title("Business Unit Title");
            columns.Bound(c => c.JobCode).Title("Job Code");
            columns.Bound(c => c.JobTitle).Title("Job title");
        })
        .ToolBar(tools => { tools.Excel(); tools.Pdf(); })
        .Pdf(pdf => pdf
            .AllPages()
            .Landscape()
            .FileName("Budget To Actuals Report.pdf")
        )
        .Excel(excel => excel.AllPages(true)
          .FileName("Budget To Actuals Report.xlsx")
          .Filterable(true))

        .Sortable()

        .Selectable()
        .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
        .DataSource(dataSource => dataSource.Ajax()
        .Aggregates(aggregates =>
        {
           aggregates.Add(p => p.BudgetAmount).Sum();
            aggregates.Add(p => p.BudgetToDate).Sum();
            aggregates.Add(p => p.ActualPay).Sum();
            aggregates.Add(p => p.Variance).Sum();
        })
        .Read(read => read.Action("BudgetToActualsReportList_Read", "Reports").Type(HttpVerbs.Post).Data("SelectedBudgetYear"))
            .Model(model =>
            {
                model.Id(p => p.Code);
            }
                  )
            .Batch(false)
            .Events(events =>
            {
                events.Error("refreshGrid");
                events.RequestEnd("gridRequestEnd");
            }
            )
        )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .k-grid-header th.k-header {
        min-width: 150px;
    }

    .k-grid {
        overflow-x: scroll;
    }

    select.form-control:not([size]):not([multiple]) {
        height: 30px;
        width: 120px;
    }

    .k-pdf-export .k-grid-toolbar,
    .k-pdf-export .k-pager-wrap {
        display: none;
    }
    .k-grid-toolbar, .k-pager-wrap {
        background: transparent !important;
        border: 0;
    }
    .k-footer-template td {
        font-weight: 700 !important;
    }
</style>

<script>
    $(document).ready(function () {
        $('#budgetYear, #budgetMonth').change(function () {
            var grid = $("#gridBudgetToActualsReportVM").data("kendoGrid");
            grid.dataSource.fetch();
        })
    });

</script>