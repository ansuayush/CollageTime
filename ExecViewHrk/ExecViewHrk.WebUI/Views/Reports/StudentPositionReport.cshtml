
@{
    ViewBag.Title = "Student Report - General";
    Layout = null;
}

<script>

    function excelExport(e) {
        var sheet = e.workbook.sheets[0];
        for (var rowIndex = 1; rowIndex < sheet.rows.length; rowIndex++) {
            var sheet = e.workbook.sheets[0];
            for (var rowIndex = 1; rowIndex < sheet.rows.length; rowIndex++) {
                var row = sheet.rows[rowIndex];                
                row.cells[10].format = "#.00"
            }
        }
    }
</script>

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">
            <div class="main-header col-sm-12 p-0 m-b-0">
                <div class="col-md-9 m-b-15 p-0">
                    <h4>Student Position Report <span class="pull-right icon-edit-block m-l-30"><i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.Models.StduentPositionsReportVM>()
.Name("gridEmployeeReports")
.Resizable(resize => resize.Columns(true))
.Filterable()
.Editable(editable => editable.Mode(GridEditMode.InLine))
.Columns(columns =>
{
columns.Bound(c => c.Firstname).Title("First Name");
columns.Bound(c => c.Lastname).Title("Last Name");
columns.Bound(c => c.FileNumber).Title("File Number");
columns.Bound(c => c.SSN);
columns.Bound(c => c.Email).Title("Email");
columns.Bound(c => c.PositionDescription).Title("Position Descriptione");
columns.Bound(c => c.PositionCode).Title("Position Code");
columns.Bound(c => c.HomeDepartmentDescription).Title("Home Department Description");
columns.Bound(c => c.JobCode).Title("Job Code");
columns.Bound(c => c.Supervisor).Title("Supervisor");
columns.Bound(c => c.TotalTimes).Format("{0:n2}");
columns.Bound(c => c.PositionStartDate).Title("Position Start Date").ClientTemplate("#= PositionStartDate == null ? '' : kendo.toString(PositionStartDate, \"MM/dd/yyyy\") #");
columns.Bound(c => c.PositionEndDate).Title("Position End Date").ClientTemplate("#= PositionEndDate == null ? '' : kendo.toString(PositionEndDate, \"MM/dd/yyyy\") #");
})
.ToolBar(tools => { tools.Excel();})
.Pdf(pdf => pdf
.AllPages()
.Landscape()
.FileName("Student Position Report.pdf")
)
.Events(e => e.ExcelExport("excelExport"))
.Sortable()
.Excel(excel => excel.AllPages(true)
.FileName("Student Position Report.xlsx")
.Filterable(true))
.Selectable()
.Pageable(pageable => pageable.Refresh(false).PageSizes(true))
.DataSource(dataSource => dataSource.Ajax()
.Read(read => read.Action("StudentPositionReport_Read", "Reports"))
.Model(model =>
{
model.Id(p => p.PositionCode);
}
                                  )
.Batch(false)
.Events(events =>
{
events.Error("refreshGrid");
events.RequestEnd("gridRequestEnd");
})
)
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .k-grid-header th.k-header {
        min-width: 150px;
    }

    .k-grid {
        overflow-x: scroll;
    }

    .k-pdf-export .k-grid-toolbar,
    .k-pdf-export .k-pager-wrap {
        display: none;
    }

    .k-grid-toolbar, .k-pager-wrap {
        background: transparent !important;
        border: 0;
    }

    .k-footer-template td {
        font-weight: 700 !important;
    }
</style>