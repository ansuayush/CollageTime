            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">

                            @(Html.Kendo().Grid<ExecViewHrk.Models.PositionsInUseReportVm>()
        .Name("gridPositionReports")
        .Resizable(resize => resize.Columns(true))
        .Filterable()
        .Editable(editable => editable.Mode(GridEditMode.InLine))
        .Columns(columns =>
        {
            columns.Bound(c => c.Code).Title("Position_Code").Width(200);
            columns.Bound(c => c.PositionTitle).Title("Position_Title");
            columns.Bound(c => c.PositionStatus).Title("Status");
            columns.Bound(c => c.JobCode).Title("Job_Code");
            columns.Bound(c => c.JobTitle).Title("Job_title");
            columns.Bound(c => c.LastName).Title("Last_Name");
            columns.Bound(c => c.FirstName).Title("First_Name");
            columns.Bound(c => c.Division).Title("HRB_Business_Unit");
            columns.Bound(c => c.EmployeeGLCode).Title("GL");


            columns.Bound(c => c.BusinessUnitCode).Title("Dept.Code");
            columns.Bound(c => c.BusinessUnitTitle).Title("Dept.Title");
            columns.Bound(c => c.hireDate).Title("Hire Date").ClientTemplate("#= hireDate == null ? '' : kendo.toString(hireDate, \"MM/dd/yyyy\") #");
            columns.Bound(c => c.RateTypeCode).Title("Rate_Type");
            columns.Bound(c => c.Rate).Format("{0:c2}");
            columns.Bound(c => c.HoursPerWeek).Title("Hours/Week");
            columns.Bound(c => c.effectiveDate).Title("Effective_Date").ClientTemplate("#= effectiveDate == null ? '' : kendo.toString(effectiveDate, \"MM/dd/yyyy\") #");
            columns.Bound(c => c.Notes);
            columns.Bound(c => c.BudgetAmount).Title("Budget");
            columns.Bound(c => c.AnnualSalary).Format("{0:c2}");
            columns.Bound(c => c.employeeStatus).Title("Employee Status");
            columns.Bound(c => c.companyCode).Title("Company Code");
            columns.Bound(c => c.filenumber).Title("File_Number");
            columns.Bound(c => c.EPositionStartDate).Title("E Position Start Date").ClientTemplate("#= EPositionStartDate == null ? '' : kendo.toString(EPositionStartDate, \"MM/dd/yyyy\") #");

        })
        .ToolBar(tools => { tools.Excel(); tools.Pdf(); })
        .Pdf(pdf => pdf
            .AllPages()
            .Landscape()
            .FileName("Position In Use Report.pdf")
        )
        .Sortable()
        .Excel(excel => excel.AllPages(true)
          .FileName("Position In Use Report.xlsx")
          .Filterable(true))
        .Selectable()
        .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
        .DataSource(dataSource => dataSource.Ajax()
        //.Read(read => read.Action("PositionsInUseReportList_Read", "Reports",new { BudgetYear = Model.budgetYear}))
        .Read(read => read.Action("PositionsInUseReportList_Read", "Reports").Type(HttpVerbs.Post))
            .Model(model =>
            {
                model.Id(p => p.Code);
            }
                  )
            .Batch(false)
            .Events(events =>
            {
                events.Error("refreshGrid");
                events.RequestEnd("gridRequestEnd");
            })
        )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .k-grid-header th.k-header {
        min-width: 150px;
    }

    .k-grid {
        overflow-x: scroll;
    }

    .k-pdf-export .k-grid-toolbar,
    .k-pdf-export .k-pager-wrap {
        display: none;
    }
    .k-grid-toolbar, .k-pager-wrap {
        background: transparent !important;
        border: 0;
    }
    .k-footer-template td {
        font-weight: 700 !important;
    }
</style>

