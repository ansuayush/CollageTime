    <div class="card-block">
        <div class="row">
            <form id="frmEmployeeType">
                <div class="col-sm-3">
                    <div class="form-group">
                        <label><span style="color:red">*</span>Class Name</label>
                        @Html.TextBoxFor(x => x.ClassName, new { @class = "form-control", data_required = "Y" })
                    </div>
                </div>
                @*<div class="col-sm-3">
                    <div class="form-group">
                        <label><span style="color:red">*</span>Description</label>
                        @Html.TextBoxFor(x => x.EmployeeClassId, new { @class = "form-control", data_required = "Y" })
