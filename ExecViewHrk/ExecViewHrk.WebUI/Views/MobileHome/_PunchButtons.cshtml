<div class="col-xs-12 col-sm-12 col-md-6 m-b-10">
    <input type="submit" class="btn btn-xlg btn-inverse-success waves-effect waves-light btn-block btn-new"
           value="@( Request.Browser.IsMobileDevice ? "Clock In" : "Clock In")"
           onclick="return SetPunchType('0'); this.disabled = 'disabled';"
           @( Convert.ToBoolean(ViewData["disablePunchIn"]) == true ? "disabled='disabled'" : "" ) />
</div>
<div class="col-xs-12 col-sm-12 col-md-6 m-b-10">
    <input type="submit" class="btn btn-xlg btn-inverse-info waves-effect waves-light btn-block btn-new"
           value="Lunch Out"
           onclick="return SetPunchType('1');this.disabled = 'disabled';"
           @( Convert.ToBoolean(ViewData["disableLunchOut"]) == true ? "disabled='disabled'" : "" ) />
</div>
<div class="col-xs-12 col-sm-12 col-md-6 m-b-10">
    <input type="submit" class="btn btn-xlg btn-inverse-default waves-effect waves-light btn-block btn-new"
           value="Lunch Back"
           onclick="return SetPunchType('2');this.disabled = 'disabled';"
           @( Convert.ToBoolean(ViewData["disableLunchBack"]) == true ? "disabled='disabled'" : "" ) />
</div>
<div class="col-xs-12 col-sm-12 col-md-6 m-b-10">
    <input type="submit" class="btn btn-xlg btn-inverse-danger waves-effect waves-light btn-block btn-new"
           value="@( Request.Browser.IsMobileDevice ? "Clock Out" : "Clock Out")"
           onclick="return SetPunchType('3');this.disabled = 'disabled';"
           @( Convert.ToBoolean(ViewData["disablePunchOut"]) == true ? "disabled='disabled'" : "" ) />
</div>
<input type="hidden" id="hidNightShiftOn" value="@ViewData["nightShiftOn"]" />
<input type="hidden" id="hidNightShiftTimeCardId" value="@ViewData["nightShiftTimeCardId"]" />