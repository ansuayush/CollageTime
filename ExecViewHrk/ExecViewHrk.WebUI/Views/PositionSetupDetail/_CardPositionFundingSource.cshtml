@model ExecViewHrk.WebUI.Models.PosionFundingSource
<div class="theme-grid">
    @(Html.Kendo().Grid(Model.posionFundingSourceList)
    .Name("CardPositionFundingSourcelst")
     .HtmlAttributes(new { style = "height:270px" })
    .Columns(columns =>
    {
        columns.Bound(p => p.EffectiveDate).Title("Effective Date").ClientTemplate("#= EffectiveDate == null ? '' : kendo.toString(kendo.parseDate(EffectiveDate, 'yyyy-MM-dd'), 'MM/dd/yyyy') #");
        columns.Bound(p => p.FundCode).Title("Code");
        columns.Bound(p => p.FundPercentage).Title("Percentage").ClientTemplate("#= FundPercentage !== null ? kendo.toString(FundPercentage,'n2') : ''#%"); ;
    })
    .Scrollable()
    //.Pageable(pageable => pageable.Refresh(false).PageSizes(false))
    .DataSource(dataSource => dataSource
      .Ajax()
        .PageSize(10)
         .Model(model =>
         {
             model.Field(p => p.EffectiveDate);
             model.Field(p => p.FundCode);
             model.Field(p => p.FundPercentage);
         }
        )
     )
    )
</div>
