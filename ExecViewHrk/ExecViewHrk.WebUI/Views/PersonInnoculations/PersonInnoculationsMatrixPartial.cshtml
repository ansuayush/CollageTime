@{
    ViewBag.Title = "Person Innoculation";
    Layout = null;
    string alert = "";
    if (ViewBag.AlertMessage != null)
    {
        alert = (string)ViewBag.AlertMessage;
    }
}

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            @Html.Action("PersonRoloDex", "Person")

            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            Innoculations
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addInnoculation()">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.WebUI.Models.PersonInnoculationVm>()
                                    .Name("gridPersonInnoculation")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()

                                    .Columns(columns =>
                                    {
                                        columns.Command(command =>
                                        {
                                            command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridPersonInnoculationEdit");
                                            command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridPersonInnoculationDelete");
                                        }).Width(70);
                                        columns.Bound(c => c.PersonInnoculationId).Visible(false);
                                        columns.Bound(c => c.InnoculationDescription).Title("Innoculation Description");
                                        columns.Bound(c => c.InnoculationDate).Title("Innoculation Date").ClientTemplate("#= kendo.toString(InnoculationDate, \"MM/dd/yyyy\") #");
                                        columns.Bound(c => c.ExpirationDate).Title("Expiration Date").ClientTemplate("#= ExpirationDate == null ? '' : kendo.toString(ExpirationDate, \"MM/dd/yyyy\") #");
                                    })
                                    .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                                    .Read(read => read.Action("PersonInnoculationList_Read", "PersonInnoculations"))

                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.PersonInnoculationId);
                                                        model.Field(p => p.PersonInnoculationId);
                                                        model.Field(p => p.InnoculationDescription);
                                                        model.Field(p => p.InnoculationDate);

                                                    }
                                                )
                                                .PageSize(10)
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                    )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>

    $("#enteredDateLabel").text(convertUTCDateToLocalDate(new Date('@Model.EnteredDate')));
    $("#modifiedDateLabel").text(convertUTCDateToLocalDate(new Date('@Model.ModifiedDate')));

    var innoculationTypesWindow = $("#innoculationTypesWindow");
    if (!innoculationTypesWindow.data("kendoWindow")) {
        innoculationTypesWindow.kendoWindow({
            width: "900px",
            height: "400px",
            position: { top: 300, left: 120 },
            title: "Innoculation Types",
            actions: [
                "Maximize",
                "Close"
            ],
            scrollable: true,
            modal: true,

            close: onCloseInnoculationsWindow
        });
    }

    function onCloseInnoculationsWindow() {
        resetKenoComboBox("InnoculationDescription");
    }

    $("#btnAddInnoculationType").click(function (e) {
        e.preventDefault();
        if ($("#gridDdlInnoculationType").find(".k-grid-update").length > 0) {
            resetGrid("gridDdlInnoculationType");
        }
        var kendoWindow = $("#innoculationTypesWindow").data("kendoWindow");
        kendoWindow.center();
        kendoWindow.open();
    });

</script>







