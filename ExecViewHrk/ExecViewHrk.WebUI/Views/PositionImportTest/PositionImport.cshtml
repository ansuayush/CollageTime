
@{
    ViewBag.Title = "PositionImport Test";
    Layout = null;
}
<style>
    .myvalidation {
        color: red;
    }

    .textunderline {
        text-decoration: underline;
    }
</style>
<h2>PositionImport</h2>
<div class="content-wrapper">
    <div class="container-fluid">
        <div class="row p-t-15">
            <div class="col-lg-12 col-md-12">
                <div class="main-header col-sm-12 p-0 m-b-0">
                </div>
                <div class="col-lg-12 col-md-12 p-0">
                    <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                        <div class="col-md-9 p-0">
                            @if (ViewData["errormessage"] != null)
                            {
                                @*@Html.ValidationSummary(ViewData["errormessage"].ToString(), new { @class = "myvalidation" })*@
                                <script>alert("WebJob Is Running.Please try after Sometime.");</script>
                            }
                            <br />
                            <h5 class="card-header-text">Import Master Data</h5>
                            <div>
                                @using (Html.BeginForm("ImportData", "PositionImportTest", FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @*<input type="file" id="ImportId" name="postedFile" class="form-control-file" />*@
                                    @*<br />*@
                                    <input type="submit" id="btnImport" class="btn btn-primary" value="Import" />
                                }
                                <a href="~/Files/Drew University Master File.xlsx" target="_blank" class="textunderline">Sample Drew University Template</a>
                                <br />
                                <a href="~/Files/Student Master File.xls" target="_blank" class="textunderline">Sample Student Template</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

