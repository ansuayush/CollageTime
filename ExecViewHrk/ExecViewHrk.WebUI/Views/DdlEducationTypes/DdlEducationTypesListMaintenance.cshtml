@{
    ViewBag.Title = "Education Types";
    Layout = null;
}


<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            <div class="main-header col-sm-12 p-0 m-b-0">
                <div class="col-md-9 m-b-15 p-0">
                    <h4>Education Types<span class="pull-right icon-edit-block m-l-30"><i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-9 p-0">
                        <button type="button" onclick="gridAdd('gridEducationType')" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                    <div class="col-md-3 pull-right text-right">
                        <div class="form-group row m-b-0">&nbsp;</div>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                           @(Html.Kendo().Grid<ExecViewHrk.EfClient.DdlEducationType>()
       .Name("gridEducationType")
        .Resizable(resize => resize.Columns(true))
        .Filterable()
        .Editable(editable => editable.Mode(GridEditMode.InLine))
        .Columns(columns =>
        {
            columns.Command(command =>
            {
                command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridEdit");
                command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridDelete");
            }).Width(70);
            columns.Bound(c => c.EducationTypeId).Visible(false);
            columns.Bound(c => c.Code);
            columns.Bound(c => c.Description);
            columns.Bound(c => c.Active).ClientTemplate("#= Active ? 'Yes' : 'No' #");

        })
        .Sortable()
        .Selectable()
        .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
        .DataSource(dataSource => dataSource
            .Ajax()
                            .Read(read => read.Action("DdlEducationTypesList_Read", "DdlEducationTypes"))
                                .Create(create => create.Action("DdlEducationTypesList_Create", "DdlEducationTypes"))
                                    .Update(update => update.Action("DdlEducationTypesList_Update", "DdlEducationTypes"))
                                    .Destroy(destroy => destroy.Action("DdlEducationTypesList_Destroy", "DdlEducationTypes"))
            .Model(model =>
            {
                model.Id(p => p.EducationTypeId);
                model.Field(p => p.EducationTypeId).Editable(false);
                model.Field(p => p.Code);
                model.Field(p => p.Description);
            }
                  )
            .Batch(false)
            .Events(events =>
            {
                events.Error("refreshGrid");
                events.RequestEnd("gridRequestEnd");
            })
        )
                        )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
