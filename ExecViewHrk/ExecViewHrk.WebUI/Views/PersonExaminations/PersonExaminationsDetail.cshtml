@model ExecViewHrk.WebUI.Models.PersonExaminationVm
<div class="card p-15">
    <div class="card-header">
        <h5 class="card-header-text">Person Examination</h5>
    </div>
    <div class="card-block">
        <div class="row">
            @using (Html.BeginForm("PersonExaminations", "PersonExaminations", FormMethod.Post, new { role = "form", id = "PersonExaminationForm" }))
            {
                @Html.HiddenFor(model => model.PersonId, new { id = "hiddenPersonId" })
                @Html.HiddenFor(model => model.PersonExaminationId, new { id = "hiddenPersonExaminationId" })
                @Html.ValidationSummary(true)
                <div class="col-sm-3">
                    <div class="form-group ">
                        <label><span style="color:red">*</span>Medical Examination Type</label>
                        <div class="input-group">
                            @Html.DropDownListFor(model => model.MedicalExaminationTypeId,

                      new SelectList(Model.MedicalExaminationDropDownList, "keyvalue", "keydescription", Model.MedicalExaminationTypeId), new { @class = "form-control", data_required = "Y" })
                            @if (!User.IsInRole("ClientEmployees"))
                            {
                                <span class="input-group-addon bg-dark-primary-theme" data-toggle="modal" onclick="quickAdd(event,'MedicalExaminationType');">
                                    <span class="fa fa-plus"></span>
                                </span>
                            }
                        </div>
                        <div>
                            @Html.ValidationMessageFor(model => model.MedicalExaminationDescription)
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group">
                        <label><span style="color:red">*</span>Examination Date</label>
                        @Html.TextBoxFor(model => model.ExaminationDate, "{0:MM/dd/yyyy}", new { @class = "datepicker form-control", data_required = "Y" })
                        <div>
                            @Html.ValidationMessageFor(x => x.ExaminationDate)
                        </div>
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group ">
                        <label>Examiner</label>
                        @Html.TextBoxFor(x => x.Examiner, new { @class = "form-control" })
                        @Html.ValidationMessageFor(x => x.Examiner)
                    </div>
                </div>
                <div class="col-sm-3">
                    <div class="form-group ">
                        <label>Next Scheduled Examination</label>
                        @Html.TextBoxFor(model => model.NextScheduledExamination, "{0:MM/dd/yyyy}", new { @class = "datepicker form-control" })
                        <div>
                            @Html.ValidationMessageFor(x => x.NextScheduledExamination)
                        </div>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group ">
                        <label>Notes</label>
                        @Html.TextAreaFor(x => x.Notes, new { @class = "form-control", @style = "height:80px;" })
                        @Html.ValidationMessageFor(x => x.Notes)
                    </div>
                </div>
            }
           
        </div>
    </div>
</div>
<div class="p-15 text-right">
    <button type="button" class="btn btn-default waves-effect md-close m-r-15">Cancel</button>
    <button type="button" class="btn btn-primary" id="btnSaveMedicalExaminationAjax">Done</button>
</div>
<script>
    $(document).ready(function () {
        pageSetup();
    });
  
   

    $("#btnSaveMedicalExaminationAjax").click(function (e) {
        e.preventDefault();
        if (!ValidateForm("PersonExaminationForm")) {
            loading(false);
            return;
        }
        var isOk = CompareDatesInn("ExaminationDate", "NextScheduledExamination", 'Examination Date', 'Next Scheduled Examination Date');

        if (!isOk) {
            loading(false);
            return
        }
        var postData = $("#PersonExaminationForm").serializeArray();
        var formURL = $("#ApplicationUrl").val() + "PersonExaminations/PersonExaminationsSaveAjax";
        $.post(formURL, postData, function (data, status) {

             if (data.succeed == false) {
                //formService.isSavingInProgress = false;
                toastr.error(data.Message);
            }
            else {
                 var _oldhiddenPersonExaminationId = $("#hiddenPersonExaminationId").val();
                 resetGrid("gridPersonExamination");
                 $("#btnSaveMedicalExaminationAjax").parent().find(".md-close").click();
                //formService.isLoadingInProgress = true;
               // killTimer();
                if (_oldhiddenPersonExaminationId != "0") {
                    //timeOutFn = setTimeout(function () {
                     //   formService.isSavingInProgress = false;
                        toastr.success(formService.messages.updated);
                     //   formService.isLoadingInProgress = false;
                    //}, 0);
                }
                else {
                   // timeOutFn = setTimeout(function () {
                   //     formService.isSavingInProgress = false;
                        toastr.success(formService.messages.saved);
                    //    formService.isLoadingInProgress = false;
                   // }, 0);
                }
            }
        });
    });


    function CompareDatesInn(startDateField, endDateField, startDateLabel, endDateLabel) {
        var first = getTimeFn(startDateField);
        var last = getTimeFn(endDateField);
        var isOk = true;
        if (first != null && last != null) {
            var dateDifference = Math.ceil((first - last) / (1000 * 3600 * 24));
            if (dateDifference > 0) {
                toastr.error(endDateLabel + " should not be less than " + startDateLabel + " .");
                isOk = false;
            }
        }
        return isOk;
    }
    function getTimeFn(selector) {
        var selectedDate = $("#" + selector)[0].value;
        if (selectedDate && (selectedDate != '' || typeof (selectedDate) != undefined)) {
            var time = new Date(moment.utc(new Date(selectedDate), 'MM/DD/YYYY')).getTime();
            return time;
        } else {
            return null;
        }

    }
</script>
