                    <div class="row ">
                        <div class="col-md-12">
                            <div class="col-md-5 ">
                                <div class="form-group ">
                                    <div>
                                        <label><span style="color:red">*</span>Medical Examination Type</label>
                                    </div>
                                    @(Html.Kendo().ComboBox()
                                        .Name("MedicalExaminationDescription")
                                        .HtmlAttributes(new { style = "width:300px" })
                                        .DataTextField("Description")
                                        .DataValueField("MedicalExaminationTypeId")
                                        .Filter(FilterType.Contains)
                                          .DataSource(source =>
                                          {
                                              source.Read(read =>
                                              {
                                                  read.Action("GetMedicalExaminationTypes", "DdlMedicalExaminationTypes").Type(HttpVerbs.Post);

                                              })
                                              .ServerFiltering(true);
                                          })
                                        .Placeholder("select an Examination Type")
                                    )

                                    @if (!User.IsInRole("ClientEmployees"))
                                    {
                                        <button id="btnAddMedicalExaminationType" class="btn btn-info">+</button>
                                    }


                                    <div>
                                        @Html.ValidationMessageFor(model => model.MedicalExaminationDescription)
                                    </div>
                                </div>


                                <div class="form-group">
                                    <label>Examination Date</label>
                                    <div>
                                        @(Html.Kendo().DatePickerFor(x => x.ExaminationDate)
                                        .Name("ExaminationDate")
                                        .Min(new DateTime(1900, 1, 1))
                                        .Max(new DateTime(2100, 12, 31))

                                        )
                                        @Html.ValidationMessageFor(x => x.ExaminationDate)
                                    </div>
                                </div>

                                <div class="form-group ">
                                    <label>Examiner</label>
                                    @Html.TextBoxFor(x => x.Examiner, new { @class = "form-control" })
