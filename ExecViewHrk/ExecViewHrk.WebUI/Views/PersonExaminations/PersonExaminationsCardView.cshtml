                                </div>

                                <div class="form-group">
                                    <label>Next Scheduled Examination</label>
                                    <div>
                                        @(Html.Kendo().DatePickerFor(x => x.NextScheduledExamination)
                                     .Name("NextScheduledExamination")
                                     .Min(new DateTime(1900, 1, 1))
                                     .Max(new DateTime(2100, 12, 31))
                                        )
                                    </div>
                                    <div>
                                        @Html.ValidationMessageFor(x => x.NextScheduledExamination)
                                    </div>
                                </div>

