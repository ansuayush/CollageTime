<script>
    $(document).ready(function () {
        pageSetup();
    });
    $("#enteredDateLabel").text(convertUTCDateToLocalDate(new Date('@Model.EnteredDate')));
    var medicalExaminationTypesWindow  = $("#medicalExaminationTypesWindow");
    if (!medicalExaminationTypesWindow .data("kendoWindow")) {
        medicalExaminationTypesWindow .kendoWindow({
            width: "900px",
            height: "400px",
            position: { top: 300, left: 120 },
            title: "Medical Examination Types",
            actions: [
                "Maximize",
                "Close"
            ],
            scrollable: true,
            modal: true,

            close: onCloseMedicalExaminationsWindow
        });
    }

    function onCloseMedicalExaminationsWindow() {
        resetKenoComboBox('MedicalExaminationDescription');
        resetGrid('gridDdlMedicalExaminationType');
    }

    $("#btnAddMedicalExaminationType").click(function (e) {
        e.preventDefault();
        var kendoWindow = $("#medicalExaminationTypesWindow").data("kendoWindow");
        kendoWindow.center();
        kendoWindow.open();
    });

</script>