
@model ExecViewHrk.EfClient.DdlEmployeeType
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">Employee Type</h4>
</div>
<div class="modal-body">
    <div class="row">
        <form id="frmEmployeeType">
            <div class="col-sm-12">
                <div class="form-group">
                    <label><span style="color:red">*</span>Code</label>
                    @Html.TextBoxFor(x => x.Code, new { @class = "form-control", data_required = "Y" })
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label><span style="color:red">*</span>Description</label>
                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control", data_required = "Y" })
                </div>
            </div>
            @Html.HiddenFor(x => x.Active)
        </form>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect m-r-15" data-dismiss="modal" id="btnCloseEmployeeType">Close</button>
    <button type="button" class="btn btn-primary waves-effect waves-light " id="btnSaveEmploymentStatus">Save</button>
</div>
<script>
    $("#btnSaveEmploymentStatus").click(function (e) {
        e.preventDefault();

        if (!ValidateForm("frmEmployeeType")) {
            loading(false);
            return;
        }

        var postData = $("#frmEmployeeType").serializeArray();
        var formURL = $("#ApplicationUrl").val() + "PersonEmployees/DdlEmployeeTypesList_Create";
        $.post(formURL, postData, function (data, status) {
            if (data.Errors != null) {
                toastr.error(data.Errors[""].errors[0]);
            }
            else {
                reloadEmployeeTypeDropDown();
                $("#btnCloseEmployeeType").trigger('click');
            }
        });
    });
    function reloadEmployeeTypeDropDown() {
        var _selectedValue = $("#EmployeeTypeID").val();
        $.get($("#appBaseUrl").val() + "PersonEmployees/GetEmployeTypeList", function (data, status) {
            var list = data;
            if (list.length > 0) {
                $("#EmployeeTypeID").empty();
                for (var i = 0; i < list.length; i++) {
                    if (list[i].keyvalue == _selectedValue) {
                        $("#EmployeeTypeID").append("<option value='" + list[i].keyvalue + "' selected >" + list[i].keydescription + "</option>");
                    } else {
                        $("#EmployeeTypeID").append("<option value='" + list[i].keyvalue + "' >" + list[i].keydescription + "</option>");
                    }


                }
            }
        });
    }
</script>



