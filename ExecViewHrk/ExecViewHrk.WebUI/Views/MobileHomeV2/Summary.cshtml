<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>::: HR Next :::</title>
    <!-- Meta -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Priya International Ltd - BR" />
    <meta name="keywords" content="Priya International Ltd - BR" />
    <meta name="author" content="Priya International Ltd - BR" />
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="32x32" href="images/hr-favicon.png">
    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700,800" rel="stylesheet" />
    <!-- Font Awesome font-->
    <link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" />
    <!-- Required Fremwork -->
    <link rel="stylesheet" type="text/css" href="~/Content/mobile/css/bootstrap.min.css" />
    <!-- Style.css -->
    <link rel="stylesheet" type="text/css" href="~/Content/mobile/css/main.css" />
    <!-- custom.css-->
    <link rel="stylesheet" type="text/css" href="~/Content/mobile/css/custom.css" />
    <link href="~/Content/mobile/css/responsive.css" type="text/css" rel="stylesheet" />
    @Styles.Render("~/Content/kendo/2016.1.226/bundles")
    <!-- Required Jqurey -->
    <script type="text/javascript" src="~/Scripts/mobile/js/jquery.min.js"></script>
    <script type="text/javascript" src="~/Scripts/mobile/js/three.min.js"></script>
    <!-- Required Fremwork -->
    <script type="text/javascript" src="~/Scripts/mobile/js/bootstrap.min.js"></script>
    <!-- Main library -->
    @Scripts.Render("~/bundles/kendo")
</head>
<body class="horizontal-fixed fixed">
    <div class="wrapper main-wrapper">
        <!-- Main content starts -->
        <div class="content-wrapper">
            <div class="container-fluid p-b-0">
                <div class="row">
                    <div class="col-md-12 p-0">
                        <div class="col-sm-12 p-0 header-section text-center">
                            <i class="fa fa-arrow-circle-left f-30 m-r-5" onclick="window.location.href = '@Url.Action("Index", "MobileHomeV2")'" style="float:left; margin-left:15px; margin-top:5px;"></i>
                            <h3 style="display:inline-block;">CollegeTime</h3>
                            <i class="fa fa-sign-out f-28 pull-right m-r-15" style="margin-top:8px;" onclick="window.location.href = '@Url.Action("Login", "Account")'"></i>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 p-0">
                            <div class="col-xs-12 col-sm-12">
                                <div class="form-group dropdown-warning m-b-0 p-t-10 p-b-10 v-top rolodex">
                                    <label class="m-0" style="color:#fff;">Pay Period</label>
                                    <div class="f-16 block f-w-600">
                                        @*
                                            <!--Old Simple Dropdown -->
                                            @Html.DropDownList("ddlPayPeriodId", new SelectList((System.Collections.IEnumerable)ViewData["PayPeriods"], "PayPeriodId", "PayPeriod"), new { @class = "f-16 f-w-600", style = "border:0px;" })*@
                                        @(Html.Kendo().DropDownList()
                                            .Name("ddlPayPeriodId")
                                            .DataTextField("PayPeriod").DataValueField("PayPeriodId")
                                            .Events(e => e.Change("OnChange"))
                                            .BindTo((System.Collections.IEnumerable)ViewData["PayPeriods"])
                                            .HtmlAttributes(new { style = "width: 100%" })
                                            .Filter(FilterType.Contains)
                                        )
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-xs-12 col-sm-12 col-md-12 m-b-15" id="viewSummeryDiv">
                        </div>
                    </div>
                </div>
            </div>
            <footer class="f-fix">
                <div class="footer-bg b-t-muted text-center footer-area f-13">
                    © 2017-2018 <a href="#" class="txt-white">CollegeTime</a>. All rights reserved.
                </div>
            </footer>
        </div>

    </div>
    <script type="text/javascript">

        $(document).ready(function () {
            var dropdownlist = $("#ddlPayPeriodId").data("kendoDropDownList");
            dropdownlist.trigger("change");
        });

        function OnChange() {
            var payPeriod = $("#ddlPayPeriodId").val();
            $.ajax({
                type: "GET",
                url: '@Url.Action("_ViewSummary", "MobileHomeV2")',
                data: { PayPeriodId: payPeriod},
                cache: false,
                success: function (data) {
                    if (data == "") {
                        alert("Your session has been timed out or expired. Click 'OK' to login and continue.");
                        window.location = '@Url.Action("Login","Account")';
                    }
                    if (data != null) {
                        $("#viewSummeryDiv").empty();
                        $("#viewSummeryDiv").html(data);
                    }
                }
            });
        }
    </script>
</body>
</html>