@{
    ViewBag.Title = "Person Relationship List";
    Layout = null;

    string alert = "";
    if (ViewBag.AlertMessage != null)
    {
        alert = (string)ViewBag.AlertMessage;
    }
}

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            @Html.Action("PersonRoloDex", "Person")

            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            Relationship
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addPersonRelationship()">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.WebUI.Models.PersonRelationshipVm>()
                                    .Name("gridPersonRelationship")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()

                                    .Columns(columns =>
                                    {
                                        columns.Command(command =>
                                        {
                                            command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridRelationshipEdit");
                                            command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridRelationshipDelete");
                                        }).Width(70);
                                        columns.Bound(c => c.RelationshipTypeId).Visible(false);
                                        columns.Bound(c => c.RelationshipDescription);
                                        columns.Bound(c => c.RelationPersonName);
                                        columns.Bound(c => c.EnteredBy);
                                        columns.Bound(c => c.EnteredDate).ClientTemplate("#= EnteredDate == null ? '' : kendo.toString(EnteredDate, \"MM/dd/yyyy\") #");
                                        columns.Bound(c => c.Dependent);
                                        columns.Bound(c => c.EmergencyContact);
                                        columns.Bound(c => c.Garnishment);
                                    })
                                    .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                                    .Read(read => read.Action("PersonRelationshipList_Read", "PersonRelationships"))

                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.RelationshipTypeId);
                                                        model.Field(p => p.RelationPersonName);
                                                        model.Field(p => p.EnteredBy);
                                                        model.Field(p => p.EnteredDate);
                                                        model.Field(p => p.Dependent);
                                                        model.Field(p => p.EmergencyContact);
                                                        model.Field(p => p.Garnishment);
                                                    }
                                                )
                                                .PageSize(10)
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                    )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>