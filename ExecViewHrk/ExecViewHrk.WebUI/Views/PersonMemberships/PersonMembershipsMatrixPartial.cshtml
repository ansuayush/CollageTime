@{
    ViewBag.Title = "Person Membership";
    Layout = null;

    string alert = "";
    if (ViewBag.AlertMessage != null)
    {
        alert = (string)ViewBag.AlertMessage;
    }
}

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            @Html.Action("PersonRoloDex", "Person")

            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            Membership
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addPersonMembership()">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.WebUI.Models.PersonMembershipVm>()
                                    .Name("gridPersonMembership")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()

                                    .Columns(columns =>
                                    {
                                        columns.Command(command =>
                                        {
                                            command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridPersonMembershipEdit");
                                            command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridPersonMembershipDelete");
                                        }).Width(70);
                                        columns.Bound(c => c.PersonMembershipId).Visible(false);
                                        columns.Bound(c => c.Number).Title("Membership Number");
                                        columns.Bound(c => c.ProfessionalBodyDescription).Title("Professional Body");
                                        columns.Bound(c => c.RegionalChapterDescription).Title("Regional Chapter");
                                        columns.Bound(c => c.ProfessionalTitle).Title("Professional Title");
                                        columns.Bound(c => c.StartDate).Title("Start Date").ClientTemplate("#= kendo.toString(StartDate, \"MM/dd/yyyy\") #");
                                        columns.Bound(c => c.Fee).Title("Fee");
                                        columns.Bound(c => c.FeePaidDate).Title("Fee Paid Date").ClientTemplate("#= kendo.toString(FeePaidDate, \"MM/dd/yyyy\") #");

                                        columns.Bound(c => c.RenewalDate).Title("Renewal Date").ClientTemplate("#= kendo.toString(RenewalDate, \"MM/dd/yyyy\") #");
                                    })
                                    .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                                    .Read(read => read.Action("PersonMembershipList_Read", "PersonMemberships"))

                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.PersonMembershipId);
                                                        model.Field(p => p.PersonMembershipId);
                                                        model.Field(p => p.ProfessionalBodyDescription);
                                                        model.Field(p => p.RegionalChapterDescription);
                                                        model.Field(p => p.ProfessionalTitle);
                                                        model.Field(p => p.StartDate);
                                                        model.Field(p => p.Fee);
                                                        model.Field(p => p.FeePaidDate);
                                                        model.Field(p => p.Number);
                                                        model.Field(p => p.RenewalDate);
                                                    }
                                                )
                                                .PageSize(10)
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                    )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>











