@{
    ViewBag.Title = "Person Test";
    Layout = null;

    string alert = "";
    if (ViewBag.AlertMessage != null)
    {
        alert = (string)ViewBag.AlertMessage;
    }
}

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            @Html.Action("PersonRoloDex", "Person")

            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            Evaluation Test
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addPersonTest()">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.Models.PersonTestVm>()
                                    .Name("gridPersonTest")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()
                                    
                                    .Columns(columns =>
                                    {
                                        columns.Command(command =>
                                        {
                                            command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridPersonTestEdit");
                                            command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridPersonTestDelete");
                                        }).Width(70);
                                        columns.Bound(c => c.PersonTestId).Visible(false);
                                        columns.Bound(c => c.EvaluationTestDescription).Title("Evaluation Test");
                                        columns.Bound(c => c.TestDate).Title("Examination Date").ClientTemplate("#= kendo.toString(TestDate, \"MM/dd/yyyy\") #");
                                        columns.Bound(c => c.Score).Title("Score");
                                        columns.Bound(c => c.Grade).Title("Grade");
                                        columns.Bound(c => c.Administrator).Title("Administrator");
                                    })
                                    .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                                    .Read(read => read.Action("PersonTestList_Read", "PersonTests"))
                                                    
                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.PersonTestId);
                                                        model.Field(p => p.PersonTestId);
                                                        model.Field(p => p.Score);
                                                        model.Field(p => p.EvaluationTestDescription);
                                                        model.Field(p => p.TestDate);
                                                        model.Field(p => p.Score);
                                                        model.Field(p => p.Grade);
                                                        model.Field(p => p.Administrator);
                                                    }
                                                )
                                                .PageSize(10)
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                    )
                            )
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    </div>
</div>












