<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - ExecView</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/themes/base/base.css" rel="stylesheet" />
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    @Styles.Render("~/Content/kendo/2016.1.226/bundles")
    <link href="~/Content/Site.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />

    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/kendo")
    @*@Scripts.Render("~/bundles/jquery")*@
    <script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/Scripts/jquery-ui-1.12.1.min.js"></script>
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/Common")

    <style>
        .container {
            padding-top: 10px;
        }

        .validation-summary-errors {
            color: #f00;
        }
    </style>


    <script src="~/Scripts/jquery-migrate-1.2.1.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>


    <script type="text/javascript">
        $.validator.setDefaults({
            ignore: ""
        });
        $.validator.defaults.ignore = "";

    </script>

</head>
<body>
    @Html.Hidden("appBaseUrl", Url.Content("~"))
    <div class="navbar navbar-inverse  navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#upperMenu">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>

                <img src="~/Images/ExecViewLogo.jpg" style="padding-top:6px; padding-left:6px; padding-bottom:6px" width="100" height="50" />

            </div>
            <div class="navbar-collapse collapse" id="upperMenu">
                @Html.Partial("_LoginPartial")
                <ul class="nav navbar-nav  navbar-right">
                    <li>@Html.ActionLink("Home", "Index", "EmployeeHome")</li>
                   
                </ul>

            </div>
        </div>
    </div>
    <div style="position:fixed; left:0px; top:60px; width:100%; z-index:1040; height:10px; background-color:red"></div>
    <div class="navbar navbar-default    navbar-fixed-top  " style="margin-top:60px">
        <div class="container">

            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#lowerMenu">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>


            </div>
            <div class="navbar-collapse collapse" id="lowerMenu">

                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "EmployeeHome")</li>
                </ul>

            </div>
        </div>
    </div>

        <div class="container  body-content">

            <div class="row text-center " style="margin-top:70px">
                <div class="btn-group">
                   
                </div>
            </div>

            @RenderBody()
            <hr />

            <footer>
                <p>&copy; @DateTime.Now.Year - ExecView @ExecViewHrk.Domain.Helper.ExecViewHrkConstants.ExecviewVersionNumber</p>
            </footer>

        </div>

    </body>
</html>
