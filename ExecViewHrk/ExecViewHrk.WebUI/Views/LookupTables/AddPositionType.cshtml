@model ExecViewHrk.EfClient.DdlPositionTypes
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">Add Position Type</h4>
</div>
<div class="modal-body">
    <div class="row">
        <form id="frmPositionType">
            <div class="col-sm-12">
                <div class="form-group">
                    <label><span style="color:red">*</span>Code</label>
                    @Html.TextBoxFor(x => x.code, new { @class = "form-control", data_required = "Y" })
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label><span style="color:red">*</span>Description</label>
                    @Html.TextBoxFor(x => x.description, new { @class = "form-control", data_required = "Y" })
                </div>
            </div>
            @Html.HiddenFor(x => x.active)
        </form>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect m-r-15" data-dismiss="modal" id="btnClosePositionType">Close</button>
    <button type="button" class="btn btn-primary waves-effect waves-light " id="btnSavePositionType">Save</button>
</div>
<script>
    $("#btnSavePositionType").click(function (e) {
        e.preventDefault();

        if (!ValidateForm("frmPositionType")) {
            loading(false);
            return;
        }

        var postData = $("#frmPositionType").serializeArray();
        var formURL = $("#ApplicationUrl").val() + "LookupTables/DdlPositionTypeList_Create";
        $.post(formURL, postData, function (data, status) {
            if (data.Errors != null) {
                toastr.error(data.Errors[""].errors[0]);
            }
            else {
                reloadPositionTypeDropDown();
                $("#btnClosePositionType").trigger('click');
            }
        });
    });
    function reloadPositionTypeDropDown() {
        var _selectedValue = $("#PositionTypeId").val();
        $.get($("#appBaseUrl").val() + "LookupTables/GetDdlPositionTypeList", function (data, status) {
            var list = data;
            if (list.length > 0) {
                $("#PositionTypeId").empty();
                $("#PositionTypeId").append("<option value=''>Select</option>");
                for (var i = 0; i < list.length; i++) {
                    if (list[i].keyvalue == _selectedValue) {
                        $("#PositionTypeId").append("<option value='" + list[i].PositionTypeId + "' selected >" + list[i].Description + "</option>");
                    } else {
                        $("#PositionTypeId").append("<option value='" + list[i].PositionTypeId + "' >" + list[i].Description + "</option>");
                    }


                }
            }
        });
    }
</script>