<div class="theme-grid">
    @(Html.Kendo().Grid<ExecViewHrk.EfClient.DdlEEOFileStatuses>()
            .Name("gridDdlBusinessLevel")
        .Resizable(resize => resize.Columns(true))
        .Filterable()
        .Editable(editable => editable.Mode(GridEditMode.InLine))
        .Columns(columns =>
        {
            columns.Command(command =>
            {
                command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridEdit");
                command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridDelete");
            }).Width(70);
            columns.Bound(c => c.Code).Title("Code").ToString().Trim();
            columns.Bound(c => c.Description).Title("Description").ToString().Trim();
            columns.Bound(c => c.Active).ClientTemplate("#= Active ? 'Yes' : 'No' #"); ;
        })
        .Sortable()
        .Selectable()
        .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
        .Events(e => e.DataBound("gridDataBound"))
        .DataSource(dataSource => dataSource.Ajax()
                                .Read(read => read.Action("DdlEEOFileStatusList_Read", "LookupTables"))
                                .Create(create => create.Action("DdlEEOFileStatus_Create", "LookupTables"))
                                .Update(update => update.Action("DdlEEOFileStatusList_Update", "LookupTables"))
                                .Destroy(destroy => destroy.Action("DdlEEOFileStatus_Destroy", "LookupTables"))
            .Model(model =>
            {
                model.Id(p => p.EEoFileStatusNbr);
                model.Field(p => p.EEoFileStatusNbr).Editable(false);
                model.Field(p => p.Code).ToString().Trim();
                model.Field(p => p.Description).ToString().Trim();
                model.Field(p => p.Active);
            }
                  )
            .Batch(false)
          .Events(events => { events.Error("errorhandlerEeoTypes"); events.RequestEnd("gridRequestEnd"); })
        )
    )
</div>
<script type="text/javascript">
    $(".k-grid-add").click(function () {
        setTimeout(function () {
            $('a[class*="k-grid-update"]').html('<span class="k-icon k-update"></span>Create');
        }, 1)
    });
   
</script>




