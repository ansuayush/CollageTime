
@model ExecViewHrk.EfClient.ddlSalaryComponents
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">×</span>
    </button>
    <h4 class="modal-title">Add Salary Component Type</h4>
</div>
<div class="modal-body">
    <div class="row">
        <form id="frmSalaryComponentType">
            <div class="col-sm-12">
                <div class="form-group">
                    <label><span style="color:red">*</span>Code</label>
                    @Html.TextBoxFor(x => x.code, new { @class = "form-control", data_required = "Y" })
                </div>
            </div>
            <div class="col-sm-12">
                <div class="form-group">
                    <label><span style="color:red">*</span>Description</label>
                    @Html.TextBoxFor(x => x.description, new { @class = "form-control", data_required = "Y" })
                </div>
            </div>
            @Html.HiddenFor(x => x.active)
        </form>
    </div>
</div>
<div class="modal-footer">
    <button type="button" class="btn btn-default waves-effect m-r-15" data-dismiss="modal" id="btnCloseSalaryComponentType">Close</button>
    <button type="button" class="btn btn-primary waves-effect waves-light " id="btnSaveSalaryComponentType">Save</button>
</div>
<script>
    $("#btnSaveSalaryComponentType").click(function (e) {
        e.preventDefault();

        if (!ValidateForm("frmSalaryComponentType")) {
            loading(false);
            return;
        }

        var postData = $("#frmSalaryComponentType").serializeArray();
        var formURL = $("#ApplicationUrl").val() + "LookupTables/DdlSalaryComponentTypesList_Create";
        $.post(formURL, postData, function (data, status) {
            if (data.Errors != null) {
                toastr.error(data.Errors[""].errors[0]);
            }
            else {
                reloadAccommodationDropDown();
                $("#btnCloseSalaryComponentType").trigger('click');
            }
        });
    });
    function reloadAccommodationDropDown() {
        var _selectedValue = $("#SalaryComponentID").val();
        $.get($("#appBaseUrl").val() + "LookupTables/GetSalaryComponentTypes", function (data, status) {
            var list = data;
            if (list.length > 0) {
                $("#SalaryComponentID").empty();
                $("#SalaryComponentID").append("<option value=''>Select</option>");
                for (var i = 0; i < list.length; i++) {
                    if (list[i].keyvalue == _selectedValue) {
                        $("#SalaryComponentID").append("<option value='" + list[i].SalaryComponentID + "' selected >" + list[i].Description + "</option>");
                    } else {
                        $("#SalaryComponentID").append("<option value='" + list[i].SalaryComponentID + "' >" + list[i].Description + "</option>");
                    }


                }
            }
        });
    }
</script>

