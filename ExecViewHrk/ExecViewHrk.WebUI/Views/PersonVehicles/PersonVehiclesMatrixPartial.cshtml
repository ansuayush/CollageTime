@using System.Web.Routing;

@{
    ViewBag.Title = "Person Vehicle";
    Layout = null;
}
@model ExecViewHrk.Models.PersonsVehicleVm
@{
    string alert = "";

    if (ViewBag.AlertMessage != null)
    {
        alert = (string)ViewBag.AlertMessage;
    }
}

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            @Html.Action("PersonRoloDex", "Person")

            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            Vehicle
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addPersonVehicle();">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>

            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.Models.PersonsVehicleVm>()
                                             .Name("gridPersonVehicle")
                                             .Resizable(resize => resize.Columns(true))
                                             .Filterable()
                                             .Columns(columns =>
                                             {
                                                 columns.Command(command =>
                                                 {
                                                     command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridPersonVehicleEdit");
                                                     command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridPersonVehicleDelete");
                                                 }).Width(70);
                                                 columns.Bound(c => c.PersonVehicleId).Visible(false);
                                                 columns.Bound(c => c.LicenseNumber).Title("Vehicle License Number");
                                                 columns.Bound(c => c.StateTitle).Title("State");
                                                 columns.Bound(c => c.Make).Title("Make");
                                                 columns.Bound(c => c.Model).Title("Model");
                                                 columns.Bound(c => c.Color).Title("Color");
                                             })
                                             .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(true).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                                    .Read(read => read.Action("PersonVehicleList_Read", "PersonVehicles"))

                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.PersonVehicleId);
                                                        model.Field(p => p.PersonId);
                                                        model.Field(p => p.StateTitle);
                                                        model.Field(p => p.SoldDate);
                                                        model.Field(p => p.AcquisitionDate);
                                                        model.Field(p => p.Color);
                                                        model.Field(p => p.Make);
                                                        model.Field(p => p.Model);
                                                        model.Field(p => p.LicenseNumber);
                                                    }
                                                )
                                                .PageSize(10)
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                    )
                            )

                            <div id="statesWindow" style="display:none">
                                <div id="statesContent">
                                    @Html.Partial("~/Views/DdlStates/DdlStatesPartial.cshtml")

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script>

    $(".k-grid-add").click(function () {
        setTimeout(function () {
            $('a[class*="k-grid-update"]').html('<span class="k-icon k-update"></span>Create');
        }, 1)
    });

    var medicalExaminationTypesWindow = $("#statesWindow");
    if (!medicalExaminationTypesWindow.data("kendoWindow")) {
        medicalExaminationTypesWindow.kendoWindow({
            width: "900px",
            height: "400px",
            position: { top: 300, left: 120 },
            title: "States",
            actions: [
                "Maximize",
                "Close"
            ],
            scrollable: true,
            modal: true,

            close: onCloseStatesWindow
        });
    }

    function onCloseStatesWindow() {
        $("#StateTitle").data("kendoComboBox").dataSource.read();
    }
    $("#btnAddState").click(function (e) {
        e.preventDefault();
        var kendoWindow = $("#statesWindow").data("kendoWindow");
        kendoWindow.center();
        kendoWindow.open();
    });
</script>