<link href="~/Content/GridOverride.css" rel="stylesheet" />
@{
    ViewBag.Title = "FormTemplate";
    Layout = "~/Views/Shared/_HrkAdminLayout.cshtml";
}

@*@model ExecViewHrk.WebUI.Models.FormTemplateVm*@

<h2>Form Template Selection Groups</h2>


<div>


    @(Html.Kendo().Grid<ExecViewHrk.EfClient.FormTemplateSelectionGroup>()
            .Name("gridFormTemplateSelection")
        .Resizable(resize => resize.Columns(true))
        .Filterable()
        .Editable(editable => editable.Mode(GridEditMode.InLine))
        .ToolBar(toolbar => toolbar.Create())

        .Columns(columns =>
        {
            columns.Command(command => { command.Edit(); command.Custom("gridDeleteCommand").Text("<span class='k-icon k-delete'></span> Delete").Click("gridDelete");  }).Width(170);
            columns.Bound(m => m.FormTemplateSelectionGroupId).Title("").Width(100).Groupable(false).Filterable(false);
                                //.ClientTemplate(Html.ActionLink("<span class=\"k-icon k-edit\"></span>Define Fields"
                                //    , "FormTemplateFields", new { requestType = "id" }
                                //    , new { @class = "k-button k-button-icontext k-grid-edit" }).ToHtmlString().Replace("id", "#=FormTemplateId#"));
            columns.Bound(c => c.Name);
            columns.Bound(c => c.Description);
            columns.Bound(c => c.ExecViewTable);
            columns.Bound(c => c.ExecViewTextColumn);
            columns.Bound(c => c.ExecViewValueColumn);
            columns.Bound(c => c.ExecViewSql).Width(400);

        })
        .HtmlAttributes(new { style = "height: 480px;" })

        .Scrollable()
        .Groupable()
        .Sortable()
        .Selectable()

        .Pageable(pageable => pageable
            .Refresh(false)
            .PageSizes(true)
            .ButtonCount(5))
        .DataSource(dataSource => dataSource
            .Ajax()
                    .Read(read => read.Action("FormTemplateSelectionGroups_Read", "Form"))
                            .Create(create => create.Action("FormTemplateSelectionGroup_Create", "Form"))
                            .Update(update => update.Action("FormTemplateSelectionGroup_Update", "Form"))
                            .Destroy(destroy => destroy.Action("FormTemplateSelectionGroup_Destroy", "Form"))
                    .Model(model =>
                            {
                                model.Id(p => p.FormTemplateSelectionGroupId);
                                model.Field(p => p.FormTemplateSelectionGroupId).Editable(false);
                                model.Field(p => p.Name);
                                model.Field(p => p.Description);
                            }
                          )
                    
            .Batch(false)
            .Events(events => events.Error("error_handler"))
        )
    )


</div>


<script type="text/javascript">

    $(".k-grid-add").click(function () {
        setTimeout(function () {
            $('a[class*="k-grid-update"]').html('<span class="k-icon k-update"></span>Create');
        }, 1)
    });
    function error_handler(e) {
        
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);

            $('#gridFormTemplate').data('kendoGrid').dataSource.read();
            $('#gridFormTemplate').data('kendoGrid').refresh();
        }
    }
</script>