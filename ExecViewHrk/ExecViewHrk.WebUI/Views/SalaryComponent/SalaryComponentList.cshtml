@model ExecViewHrk.Models.SalaryComponentViewModel
@{
    Layout = null;
    ViewBag.Title = "Salary Component";

}
<script>
    function openSalarypopupData(e) {
        $('#Flag').val('Edit');
        e.preventDefault();
        var grid = this;
        var row = $(e.currentTarget).closest("tr");
        var data = grid.dataItem(row);
        var formURL = $("#ApplicationUrl").val() + '/SalaryComponent/SalaryComponentDetail?Id=' + data.id + "&EmpId=" + $('#SelectedEmployeeID').val();
        $("#EditDetailDiv .md-content").html("");
        $("#EditDetailDiv .md-content").load(formURL);
        $('#EditDetailDiv').toggle('slide', { direction: 'right' }, 500);
        $('#EditDetailDiv').addClass('md-show');
      
    }
    function SelectedEmployee(options) {
        $('#HdSelectedEmpid').val($('#SelectedEmployeeID').val());
        return { EmpId: $('#SelectedEmployeeID').val() }
    }
</script>

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">
            <div class="main-header col-sm-12 p-0 m-b-0">
                <div class="col-md-9 m-b-15 p-0">
                    <h4>Salary Component<span class="pull-right icon-edit-block m-l-30"><i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-9 p-0">
                        <button type="button" onclick="SalaryComponentAdd()" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                    <div class="col-sm-3 p-0 text-right">
                        <div class="form-group m-r-20 p-t-5 v-top text-right">
                            <div class="input-group">
                                @Html.DropDownListFor(m => m.SelectedEmployeeID, new SelectList(Model.EmployeeList, "keyvalue", "keydescription", Model.SelectedEmployeeID), new { @class = "form-control input-sm" })
                            </div>
                        </div>
                    </div>
                </div>           
            </div>
           

            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.Models.SalaryComponentViewModel>
                                    ()
                                    .Name("gridSalaryComponentList")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()
                                    .Columns(columns =>
                                    {
                                        columns.Command(command =>
                                        {
                                            command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("openSalarypopupData");
                                            command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i></a>").Click("gridDelete");
                                        }).Width(70);
                                        columns.Bound(c => c.id).Visible(false);
                                        columns.Bound(c => c.SalaryComponentTitle).Title("Salary Component");
                                        columns.Bound(c => c.startDate).Title("Start Date").ClientTemplate("#= startDate == null ? '' : kendo.toString(kendo.parseDate(startDate, 'yyyy-MM-dd'), 'MM/dd/yyyy') #");
                                        columns.Bound(c => c.expirationDate).Title("Expiration Date").ClientTemplate("#= expirationDate == null ? '' : kendo.toString(kendo.parseDate(expirationDate, 'yyyy-MM-dd'), 'MM/dd/yyyy') #");
                                        columns.Bound(c => c.amount).Title("Amount");
                                    })
                                    .Sortable()
                                    .Selectable()
                                    .Editable(editable => editable.Mode(GridEditMode.InLine))
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                    .Read(read => read.Action("SalaryComponentList_Read", "SalaryComponent").Type(HttpVerbs.Post).Data("SelectedEmployee"))
                                    .Destroy(destroy => destroy.Action("SalaryComponentList_Destroy", "SalaryComponent"))
                                    .Model(model =>
                                    {
                                        model.Id(p => p.id);
                                        model.Field(p => p.SalaryComponentTitle);
                                        model.Field(p => p.startDate);
                                        model.Field(p => p.expirationDate);
                                        model.Field(p => p.amount);
                                    }
                                    )
                                    .PageSize(10)
                                    .Batch(false)
                                    .Events(events =>
                                    {
                                        events.Error("refreshGrid");
                                        events.RequestEnd("gridRequestEnd");
                                    })
                                    )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<input type="hidden" name="Flag" id="Flag" value="" />
<input type="hidden" name="HdSelectedEmpid" id="HdSelectedEmpid" value="@Model.SelectedEmployeeID" />
<div id="searchResults"></div>


<script type="text/javascript">
    $(document).ready(function () {
        $('#SelectedEmployeeID').change(function () {
            var grid = $("#gridSalaryComponentList").data("kendoGrid");
            grid.dataSource.fetch();
        })
    });
    $(".k-grid-add").click(function () {
        setTimeout(function () {
            $('a[class*="k-grid-update"]').html('<span class="k-icon k-update"></span>Create');
        }, 1)
    });

    function dataBound() {
        this.expandRow(this.tbody.find("tr.k-master-row").first());

    }
    function SalaryComponentAdd(e) {
        $('#Flag').val('New');
        var formURL = $("#ApplicationUrl").val() + '/SalaryComponent/SalaryComponentDetail?Id=' + 0 + "&EmpId=" + $('#SelectedEmployeeID').val();;
        $("#EditDetailDiv .md-content").html("");
        $("#EditDetailDiv .md-content").load(formURL);
        $('#EditDetailDiv').toggle('slide', { direction: 'right' }, 500);
        $('#EditDetailDiv').addClass('md-show');
    }
</script>


