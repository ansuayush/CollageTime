@using System.Web.Routing;

@{
    ViewBag.Title = "Business Units";

}

@*@model ExecViewHrk.WebUI.Models.DepartmentVm*@

@{

    string alert = "";

    if (ViewBag.AlertMessage != null)
    {
        alert = (string)ViewBag.AlertMessage;
    }
}


<div class="panel panel-info">

    <div class="panel-heading  ">

        <div class="row">
            <div class="col-md-6 ">
                <label>Business Units</label>
            </div>

            <div class="col-md-6 ">
                
            </div>
        </div>
    </div>
    <div id="formDiv" class="panel-body">

        <div class="row ">

            <div class="row ">
                <div class="col-md-12">


                    <div class="form-group ">

                        @(Html.Kendo().Grid<ExecViewHrk.EfClient.BusinessUnit>()
                                        .Name("gridBusinessUnit")
                                        .Resizable(resize => resize.Columns(true))
                                        .Filterable()
                                        .Editable(editable => editable.Mode(GridEditMode.InLine))
                                        .ToolBar(toolbar => toolbar.Create())

                                        .Columns(columns =>
                                        {
                                            columns.Command(command => { command.Edit(); command.Custom("gridDeleteCommand").Text("<span class='k-icon k-delete'></span> Delete").Click("gridDelete");  }).Width(170);
                                            columns.Bound(c => c.BusinessUnitId).Title("Id").Width(100);
                                            columns.Bound(c => c.BusinessUnitCode).Title("Code").Width(100);
                                            columns.Bound(c => c.BusinessUnitDescription).Title("Description").Width(100);
                                        })
                                        .HtmlAttributes(new { style = "height: 480px;" })

                                        .Scrollable()
                                        .Groupable()
                                        .Sortable()
                                        .Selectable()

                                        .Pageable(pageable => pageable
                                            .Refresh(false)
                                            .PageSizes(true)
                                            .ButtonCount(5))
                                        .DataSource(dataSource => dataSource
                                            .Ajax()


                                                    .Read(read => read.Action("BusinessUnitsList_Read", "BusinessUnits"))
                                                    .Create(create => create.Action("BusinessUnitsList_Create", "BusinessUnits"))
                                                    .Update(update => update.Action("BusinessUnitsList_Update", "BusinessUnits"))
                                                    .Destroy(destroy => destroy.Action("BusinessUnitsList_Destroy", "BusinessUnits"))
                                        .Model(model =>
                                        {
                                            model.Id(p => p.BusinessUnitId);
                                            model.Field(p => p.BusinessUnitId).Editable(false);
                                            model.Field(p => p.BusinessUnitCode);
                                            model.Field(p => p.BusinessUnitDescription);
                                        }
                                              )
                                        .Batch(false)
                                         .Events(events =>
                                         {
                                             events.Error("refreshGrid");
                                             events.RequestEnd("gridRequestEnd");
                                         })
                                            )
                        )


                    </div>
                </div>

            </div>

        </div>

    </div>

</div>



<script type="text/javascript">
    $(".k-grid-add").click(function () {
        setTimeout(function () {
            $('a[class*="k-grid-update"]').html('<span class="k-icon k-update"></span>Create');
        }, 1)
    });
   
</script>



