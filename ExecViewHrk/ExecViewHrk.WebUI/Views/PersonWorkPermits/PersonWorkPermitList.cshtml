@model ExecViewHrk.WebUI.Models.PersonWorkPermitVm
@{
    ViewBag.Title = "Person Work Permit";
    Layout = null;
}

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">

            @Html.Action("PersonRoloDex", "Person")

            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            Work Permit
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addPersonWorkPermitAddress()">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>                     
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.WebUI.Models.PersonWorkPermitVm>()
                                    .Name("gridPersonWorkPermit")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()
                                    .Columns(columns =>
                                    {
                                        columns.Command(command =>
                                        {
                                            command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("grdWorkPermitEdit");
                                            command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("grdWorkPermitDelete");
                                        }).Width(70);
                                        columns.Bound(c => c.PersonId).Visible(false);
                                        columns.Bound(c => c.PersonWorkPermitId).Visible(false);
                                        columns.Bound(c => c.CountryDescription).Title("Country");
                                        columns.Bound(c => c.IssueDate).Title("Issue Date").ClientTemplate("#= IssueDate == null ? '' : kendo.toString(IssueDate, \"MM/dd/yyyy\") #");
                                        columns.Bound(c => c.WorkPermitNumber).Title("Work Permit Number");
                                        columns.Bound(c => c.WorkPermitType).Title("Work Permit Type");
                                        columns.Bound(c => c.IssuingAuthority).Title("Issuing Authority");
                                        columns.Bound(c => c.ExpirationDate).Title("Expiration Date").ClientTemplate("#= ExpirationDate == null ? '' : kendo.toString(ExpirationDate, \"MM/dd/yyyy\") #");
                                        columns.Bound(c => c.ExtensionDate).Title("Extension Date").ClientTemplate("#= ExtensionDate == null ? '' : kendo.toString(ExtensionDate, \"MM/dd/yyyy\") #");
                                    })
                                    .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                    .DataSource(dataSource => dataSource.Ajax()
                                                    .Read(read => read.Action("PersonWorkPermits_Read", "PersonWorkPermits"))
                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.PersonId);
                                                        model.Id(p => p.PersonWorkPermitId);
                                                        model.Field(p => p.CountryId);
                                                        model.Field(p => p.IssueDate);
                                                        model.Id(p => p.WorkPermitNumber);
                                                        model.Field(p => p.WorkPermitType);
                                                        model.Field(p => p.CountryId);
                                                        model.Field(p => p.IssuingAuthority);
                                                        model.Field(p => p.ExpirationDate);
                                                        model.Field(p => p.ExtensionDate);
                                                    }
                                                )
                                                .PageSize(10)
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                    )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>