@using System.Web.Routing;
@{
    ViewBag.Title = "Person Passport";
    Layout = null;
}
@model ExecViewHrk.Models.PersonsPassportVm
@{
    string alert = "";

    if (ViewBag.AlertMessage != null)
    {
        alert = (string)ViewBag.AlertMessage;
    }
}
<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">
            @Html.Action("PersonRoloDex", "Person")
            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            Passport
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addPersonPassport();">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-lg-12 col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.Models.PersonsPassportVm>()
                                             .Name("gridPersonPassport")
                                             .Resizable(resize => resize.Columns(true))
                                             .Filterable()
                                             .Columns(columns =>
                                             {
                                                 columns.Command(command =>
                                                 {
                                                     command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("gridPersonPassportEdit");
                                                     command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("gridPersonPassportDelete");
                                                 }).Width(70);
                                                 columns.Bound(c => c.PersonPassportId).Visible(false);
                                                 columns.Bound(c => c.PassportNumber).Title("Passport Number");
                                                 columns.Bound(c => c.CountryDescription).Title("Country");
                                                 columns.Bound(c => c.IssueDate).Title("Issue Date").ClientTemplate("#=IssueDate == null ? '' : kendo.toString(IssueDate, \"MM/dd/yyyy\") #");
                                                 columns.Bound(c => c.ExpirationDate).Title("Expiration Date").ClientTemplate("#=ExpirationDate == null ? '' :  kendo.toString(ExpirationDate, \"MM/dd/yyyy\") #");
                                             })
                                             .Sortable()
                                    .Selectable()
                                    .Pageable(pageable => pageable.Refresh(true).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                                    .Read(read => read.Action("PersonPassportList_Read", "PersonPassports"))

                                                    .Model(model =>
                                                    {
                                                        model.Id(p => p.PersonPassportId);
                                                        model.Field(p => p.PersonPassportId);
                                                        model.Field(p => p.CountryDescription);
                                                        model.Field(p => p.IssueDate);
                                                        model.Field(p => p.ExpirationDate);
                                                        model.Field(p => p.PassportNumber);
                                                        model.Field(p => p.PassportStorage);
                                                    }
                                                )
                                                .PageSize(10)
                                        .Batch(false)
                                        .Events(events =>
                                        {
                                            events.Error("refreshGrid");
                                            events.RequestEnd("gridRequestEnd");
                                        })
                                    )
                            )
                        </div>
                        <div id="countriesWindow" style="display:none">
                            <div id="countriesContent">
                                @Html.Partial("~/Views/DdlCountries/DdlCountriesPartial.cshtml")

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    $("#enteredDateLabel").text(convertUTCDateToLocalDate(new Date('@Model.EnteredDate')));
    $("#modifiedDateLabel").text(convertUTCDateToLocalDate(new Date('@Model.ModifiedDate')));
    function countriesWindow(title, onClose) {
        var obj = {
            width: "900px",
            height: "400px",
            position: { top: 300, left: 120 },
            title: title,
            actions: [
                "Maximize",
                "Close"
            ],
            scrollable: true,
            modal: true,
            close: onClose
        }
        return obj;
    };

    var countryWindow = $("#countriesWindow");
    if (!countryWindow.data("kendoWindow")) {
        countryWindow.kendoWindow(
            countriesWindow("Countries", onCloseCountriesWindow)
        );
    }

    function onCloseCountriesWindow() {
        resetKenoComboBox('CountryDescription');
    }

    $("#btnAddCountry").click(function (e) {
        e.preventDefault();
        var kendoWindow = $("#countriesWindow").data("kendoWindow");
        $('.k-grid-cancel').click();
        kendoWindow.center();
        kendoWindow.open();
    });
</script>