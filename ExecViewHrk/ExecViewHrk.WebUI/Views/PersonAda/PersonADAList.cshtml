@model ExecViewHrk.WebUI.Models.PersonAdaVm
@{
    Layout = null;
    ViewBag.Title = "ADA";

}
<script>
    function openAdapopupData(e) {
        
        e.preventDefault();
        var grid = this;
        var row = $(e.currentTarget).closest("tr");
        var data = grid.dataItem(row);
        var formURL = $("#ApplicationUrl").val() + '/PersonAda/PersonAdaDetail?PersonAdaId=' + data.PersonAdaId + '&personId=' + data.PersonId;
        $("#EditDetailDiv .md-content").html("");
        $("#EditDetailDiv .md-content").load(formURL);
        $('#EditDetailDiv').toggle('slide', { direction: 'right' }, 500);
        $('#EditDetailDiv').addClass('md-show');
    }
</script>

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">
            @Html.Action("PersonRoloDex", "Person")
            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-3 p-0">
                        <h4>
                            ADA
                        </h4>
                    </div>
                    <div class="col-md-9 p-0 text-right">
                        <button type="button" onclick="AdaAdd()" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.WebUI.Models.PersonAdaVm>
                                    ()
                                    .Name("gridAdaList")
                                    .Resizable(resize => resize.Columns(true))
                                    .Filterable()
                                    .Columns(columns =>
                                    {
                                        columns.Command(command =>
                                        {
                                            command.Custom("gridEditCommand").Text("<i class='fa fa-pencil txt-primary f-18'></i>").Click("openAdapopupData");
                                            command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i></a>").Click("gridDelete");
                                        }).Width(70);
                                        columns.Bound(c => c.PersonAdaId).Visible(false);
                                        columns.Bound(c => c.PersonId).Visible(false);
                                        columns.Bound(c => c.AssociatedDisabilityDescription).Title("Associated Disability");
                                        columns.Bound(c => c.AccommodationDescription).Title("Accommodation Type");
                                        columns.Bound(c => c.ActualCost).Title("Actual Cost");
                                        columns.Bound(c => c.EstimatedCost).Title("Estimated Cost");
                                    })
                                    .Sortable()
                                    .Selectable()
                                    .Editable(editable => editable.Mode(GridEditMode.InLine))
                                    .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                    .Events(e => e.DataBound("gridDataBound"))
                                    .DataSource(dataSource => dataSource.Ajax()
                                    .Read(read => read.Action("GetPersonAdaList", "PersonAda"))
                                    .Destroy(destroy => destroy.Action("AdaList_Destroy", "PersonAda"))
                                    .Model(model =>
                                    {
                                        model.Id(p => p.PersonAdaId);
                                        //model.Id(p => p.PersonId);
                                        model.Field(p => p.AssociatedDisabilityDescription);
                                        model.Field(p => p.AccommodationDescription);
                                        model.Field(p => p.ActualCost);
                                        model.Field(p => p.EstimatedCost);
                                    }
                                    )
                                    .PageSize(10)
                                    .Batch(false)
                                    .Events(events =>
                                    {
                                        events.Error("refreshGrid");
                                        events.RequestEnd("gridRequestEnd");
                                    })
                                    )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="searchResults"></div>


<script  type="text/javascript">
    $(".k-grid-add").click(function () {
        setTimeout(function () {
            $('a[class*="k-grid-update"]').html('<span class="k-icon k-update"></span>Create');
        }, 1)
    });

    function dataBound() {
        this.expandRow(this.tbody.find("tr.k-master-row").first());

    }
    function AdaAdd(e) {
       
        var formURL = $("#ApplicationUrl").val() + '/PersonAda/PersonAdaDetail?PersonAdaId=' + 0 + '&personId=' + 0;
        $("#EditDetailDiv .md-content").html("");
        $("#EditDetailDiv .md-content").load(formURL);
        $('#EditDetailDiv').toggle('slide', { direction: 'right' }, 500);
        $('#EditDetailDiv').addClass('md-show');
    }
</script>


