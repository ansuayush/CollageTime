<script>
    $(document).ready(function () {
        pageSetup();
        $("#JobSetupForm *").filter(':input').not("input[type=hidden]").each(function () {
            $(this).attr("onchange", "JobSetupFormOnChange(this)");
        });
        $("#createdDate").datepicker("setDate", new Date());
        $('#jobClassID option[description=' + @Model.jobClassID +']').prop('selected', true);
        $('#workersCompensationID option[value=' + @Model.workersCompensationID +']').prop('selected', true);
        $('#CompanyCodeId option[CompanyCodeDescription=' + @Model.CompanyCodeID +']').prop('selected', true);      
        if ($("#CompanyCodeID option:selected").text() == "Select"){
          $('#CompanyCodeID option:selected').val("");
        }
        $('#eeoJobCodeID option[description=' + @Model.eeoJobCodeID +']').prop('selected', true);
        $('#eeoJobTrainingStatusID option[value=' + @Model.eeoJobTrainingStatusID +']').prop('selected', true);
        $('#unionID option[CompanyCodeDescription=' + @Model.unionID +']').prop('selected', true);
        $('#JobFamilyId option[description=' + @Model.JobFamilyId +']').prop('selected', true);
        $('#FLSAID option[value=' + @Model.FLSAID +']').prop('selected', true);
    });

    function JobSetupFormOnChange(fldEle) {
        ValidateElements(fldEle.id);
        var FiledID = fldEle.id;
        var FieldValue = $("#" + FiledID).val();
        switch (FiledID) {           
            case "CompanyCodeID":
                if ($("#CompanyCodeID option:selected").text() == "Select") {
                    $('#CompanyCodeID option:selected').val("");
                }
                break;
        }
        
    }


    $("#BtnNewJobSave").click(function (e) {
        e.preventDefault();
        loading(true)
        var form = $("#JobSetupForm");
        var staus = formService.getStatus();
        if (staus) {
            loading(false)
            return;
        }
        var errorMessage = formService.validate(form);
        if (errorMessage) {
            loading(false)
            return;
        }      
        if (!CompareDates($("#createdDate").val(), $("#endDate").val())) {
            toastr.error("End Date should greater than Created Date");
            loading(false)
            return;
        }
        var appBaseUrl = $("#appBaseUrl").val();
        var postData = $("#JobSetupForm").serializeArray();

        var formURL = appBaseUrl + "JobSetup/JobSaveAjax";
        $.post(formURL, postData, function (data, status) {
            if (status == "success") {

                if (data.succeed == false)
                    toastr.error(data.Message);
                else {
                    if (data.recordIsNew == true) {
                        LoadMenu("JobSetupList", "JobSetup")
                        $("#BtnNewJobSave").parent().find(".md-close").click();
                        formService.isLoadingInProgress = true;
                        killTimer();
                        timeOutFn = setTimeout(function () {
                            formService.isSavingInProgress = false;
                            toastr.success(formService.messages.saved);
                            formService.isLoadingInProgress = false;
                        }, 0);
                    }
                    else {
                        var Jobdata = { jobid: data.JobSetUp.Jobid };
                        LoadDetailView("JobSetupDetail", "JobSetup", Jobdata)
                        $("#BtnNewJobSave").parent().find(".md-close").click();
                        formService.isLoadingInProgress = true;
                        killTimer();
                        timeOutFn = setTimeout(function () {
                            formService.isSavingInProgress = false;
                            toastr.success(formService.messages.updated);
                            formService.isLoadingInProgress = false;
                        }, 0);
                    }
                }
            }
            else
            {
                    toastr.error(data.Message);
            }
        });
    });
</script>