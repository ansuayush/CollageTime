                                        </div>
                                    </div>
                            </div>
                            <div class="col-sm-3">
                                <div class="form-group">
                                    <label>Worker's Compensation</label>
                                    <div class="input-group">
                                        @Html.DropDownListFor(m => m.workersCompensationID, new SelectList(Model.WorkersCompensationsList, "workersCompensationID", "description", Model.workersCompensationID), new { @class = "form-control input-sm" })
                                        @if (!User.IsInRole("ClientEmployees"))
                                        {
                                            <span class="input-group-addon bg-dark-primary-theme" data-toggle="modal" onclick="AddDDLJobsetup(event, 'ddlWorkersCompensations');">
                                                <span class="fa fa-plus"></span>
                                            </span>
