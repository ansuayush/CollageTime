@model ExecViewHrk.WebUI.Models.PositionBudgetsVM
@{

    Layout = null;
    ViewBag.Title = "PositionBudgetsDetail";
}


    <div class="container-fluid">
        <div class="row p-t-15">
            <div class="col-lg-12 col-md-12">
                <div class="main-header col-sm-12 p-0 m-b-15 b-b-muted">
                    <div class="col-md-9 m-b-15 p-0">
                        <h4>Position Budget Detail <span class="pull-right icon-edit-block m-l-30"><i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                    </div>
                    <div class="col-sm-3 p-r-0 text-right">
                      
                            <button type="button" onclick='LoadMenu("PositionBudgetList", "PositionBudgets")' class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal">
                                <i></i><span class="m-l-10">Back</span>
                            </button>
                     
                    </div>
                </div>
                <div class="col-lg-12 col-md-12 p-0">
                    <div class="row">
                        <div class="col-sm-6 col-md-4">
                            <section class="panels-wells edit-block">
                                <div class="card m-b-15">
                                    <div class="card-header">
                                        <h5 class="card-header-text"><i class="fa fa-usd f-16 m-r-5"></i> Position Budget</h5>
                                        <span class="pull-right icon-edit-block" id="PositionBudget_btn" data-target="#myDiv" onclick="AddNewPositionBudget(@Model.ID)"><i class="fa fa-pencil f-20 txt-primary"></i></span>
                                    </div>
                                    <div class="card-block p-t-0">
                                        <div class="row">
                                            <div class="col-sm-12 col-md-12 card-bg-primary-oth profile-block-tag">
                                                <h6 class="f-14 txt-white">Position Record For - @Model.PositionTitle</h6>
                                            </div>
                                        </div>
                                        <div class="row p-t-10">
                                            <div class="col-sm-12 col-md-12 p-0">
                                                <div class="col-sm-12 col-md-12">
                                                    <div class="form-group">
                                                        <label class="m-0">Position Title</label>
                                                        <span class="f-13 block f-w-600">@Model.PositionTitle</span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="m-0">Year</label>
                                                        <span class="f-13 block f-w-600">@Model.BudgetYear</span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="m-0">Month</label>
                                                        <span class="f-13 block f-w-600">@Model.BudgetMonthText</span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="m-0">Amount</label>
                                                        <span class="f-13 block f-w-600">$@String.Format("{0:n2}", Model.BudgetAmount)</span>
                                                    </div>
                                                    <div class="form-group">
                                                        <label class="m-0">FTE</label>
                                                        <span class="f-13 block f-w-600">@String.Format("{0:n2}", Model.FTE)</span>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </section>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


