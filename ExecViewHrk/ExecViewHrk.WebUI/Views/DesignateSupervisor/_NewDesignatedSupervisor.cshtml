@model ExecViewHrk.WebUI.Models.AddDesignatedSupervisorVM
@using (Html.BeginForm("SaveDesignatedSupervisor", "DesignateSupervisor", FormMethod.Post, new { role = "form", id = "DesignatedSupervisorAddForm" }))
{
    @Html.ValidationSummary(true)
    <style type="text/css">
        .form-control {
            width: 100% !important;
        }
    </style>
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
            <h4 class="modal-title">Add Designated Supervisor Override</h4>
        </div>
        <div class="modal-body">
            <div class="row">
                <div class="col-sm-12 p-0">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label><span style="color:red">*</span>Current Supervisor</label>
                            @Html.DropDownListFor(model => model.SelectedCurrentSupervisor,
                                                new SelectList((System.Collections.IEnumerable)ViewData["CurrentSupervisors"], "ManagerPersonId", "ManagerPersonName"), "--Select One--", new { @class = "form-control", data_required = "Y" })
                        </div>
                    </div>
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label><span style="color:red">*</span>Replace With</label>
                            @Html.DropDownListFor(model => model.SelectedReplaceWithSupervisor,
new SelectList((System.Collections.IEnumerable)ViewData["ReplaceWithSupervisors"], "ManagerPersonId", "ManagerPersonName"), "--Select One--", new { @class = "form-control", data_required = "Y" })
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-default waves-effect m-r-15" id="btnClose" data-dismiss="modal">Close</button>
            <button type="button" id="btnAddDesignatedSupervisor" class="btn btn-primary waves-effect waves-light" onclick="this.disabled = 'disabled';" ondblclick="return false">Save</button>
        </div>

    </div>
}

<script type="text/javascript">
    $("#btnAddDesignatedSupervisor").click(function (e) {
        e.preventDefault();
        var form = $("#DesignatedSupervisorAddForm");
        if (!ValidateForm("DesignatedSupervisorAddForm")) {
            loading(false);
            return;
        }
        var appBaseUrl = $("#appBaseUrl").val();
        var postData = form.serializeArray();
        var formURL = appBaseUrl + "DesignateSupervisor/SaveDesignatedSupervisor";
        loading(true);
        $.ajax({
            type: 'POST',
            url: formURL,
            data: postData,
            success: function (data) {
                if (data.succeed) {
                    $("#btnClose").click();
                    loading(false);
                    toastr.success(formService.messages.saved);
                    LoadContents("Index", "DesignateSupervisor", postData);
                } else {
                    toastr.error(data.Message);
                    $("#btnClose").click();
                    loading(false);
                }
            },
            complete: function () {
                $("#btnClose").click();
                loading(false);
            },
            error: function (data) {
                toastr.error(data.Message);
                $("#btnClose").click();
                loading(false);
            },
            async: false,
            cache: false
        });
    });

    $('#SelectedCurrentSupervisor').on('change', function () {
        $("#SelectedReplaceWithSupervisor").val(-1);
        $("#SelectedReplaceWithSupervisor option").prop("disabled", false);

        $("#SelectedReplaceWithSupervisor option[value='" + $("#SelectedCurrentSupervisor").val() + "']").attr("disabled", "disabled");
    });
</script>