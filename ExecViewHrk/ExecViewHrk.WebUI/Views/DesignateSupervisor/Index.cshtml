@model List<ExecViewHrk.WebUI.Models.DesignatedSupervisorVM>
@{
    ViewBag.Title = "Designate Supervisor Override";
    Layout = null;
}
<script type="text/javascript">
    function DeleteDesignatedSupervisor(e) {
        e.preventDefault();
        var grid = this;
        var row = $(e.currentTarget).closest("tr");
        var gridData = grid.dataItem(row);
        var managerId = gridData.ManagerPersonId;
        var url = '@Url.Action("DesignatedSupervisor_Destroy", "DesignateSupervisor")';
        DeleteDesignatedSupervisorJs(e, url, managerId);
    }
</script>

<div class="container-fluid">
    <div class="row p-t-15">
        <div class="col-lg-12 col-md-12">
            <div class="main-header col-sm-12 p-0 m-b-0">
                <div class="col-md-9 m-b-15 p-0">
                    <h4>Designate Supervisor Override <span class="pull-right icon-edit-block m-l-30"> <i class="fa fa-expand f-24" onclick="javascript:toggleFullScreen()"></i></span></h4>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="card-block p-10 m-b-10 b-b-muted b-t-muted">
                    <div class="col-md-9 p-0">
                        <button type="button" class="btn btn-primary waves-effect waves-light b-radius-2 text-tranform-normal myButton" onclick="addDesignatedSupervisor(event)">
                            <i class="fa fa-plus"></i><span class="m-l-10">Add New Record</span>
                        </button>
                    </div>
                </div>
            </div>
            <div class="col-lg-12 col-md-12 p-0">
                <div class="row">
                    <div class="col-md-12">
                        <div class="theme-grid">
                            @(Html.Kendo().Grid<ExecViewHrk.WebUI.Models.DesignatedSupervisorVM>()
                                                                                                                            .Name("gridDesignatedSupervisor")
                                                                                                                            .Resizable(resize => resize.Columns(true))
                                                                                                                            .Filterable()
                                                                                                                                .Columns(columns =>
                                                                                                                                {
                                                                                                                                    columns.Command(command =>
                                                                                                                                    {
                                                                                                                                        command.Custom("gridDeleteCommand").Text("<i class='fa fa-trash-o m-0 txt-danger f-18'></i>").Click("DeleteDesignatedSupervisor");
                                                                                                                                    }).Width(50);
                                                                                                                                    columns.Bound(c => c.ManagerPersonId).Title("Current Supervisor Id").Hidden();
                                                                                                                                    columns.Bound(c => c.ManagerName).Title("Current Supervisor");
                                                                                                                                    columns.Bound(c => c.NewManagerPersonId).Title("Replace With Supervisor Id").Hidden();
                                                                                                                                    columns.Bound(c => c.NewManagerPersonName).Title("Replace With");
                                                                                                                                    columns.Bound(c => c.CreatedByUser).Title("Created By").Hidden();
                                                                                                                                    columns.Bound(c => c.CreatedDate).Title("Created Date").Hidden();

                                                                                                                                })
                                                                                                                            .Sortable()
                                                                                                                            .Selectable()
                                                                                                                            .Pageable(pageable => pageable.Refresh(false).PageSizes(true))
                                                                                                                                .DataSource(dataSource => dataSource
                                                                                                                                    .Ajax()
                                                                                                                                            .Read(read => read.Action("DesignatedSupervisor_Read", "DesignateSupervisor"))
                                                                                                                                            .Destroy(destroy => destroy.Action("DesignatedSupervisor_Destroy", "DesignateSupervisor"))
                                                                                                                                .Model(model =>
                                                                                                                                {
                                                                                                                                    model.Id(p => p.ManagerPersonId);
                                                                                                                                    model.Id(p => p.ManagerName);
                                                                                                                                    model.Id(p => p.NewManagerPersonId);
                                                                                                                                    model.Id(p => p.NewManagerPersonName);
                                                                                                                                    model.Id(p => p.CreatedByUser);
                                                                                                                                    model.Id(p => p.CreatedDate);
                                                                                                                                }
                                                                                                                                      )
                                                                                                                                .Batch(false)
                                                                                                                                .Events(events =>
                                                                                                                                {
                                                                                                                                    events.Error("refreshGrid");
                                                                                                                                    events.RequestEnd("gridRequestEnd");
                                                                                                                                })
                                                                                                                                )
                            )
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="AddDesignatedSupervisorModal" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" data-toggle="modal" style="display: none;" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            </div>
        </div>
    </div>
</div>